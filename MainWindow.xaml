<Window x:Class="UtLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UtLoader.ViewModels"
        Title="UtLoader" Height="320" Width="520">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <StackPanel Margin="10">

        <TextBox Height="30" Text="{Binding Url}" />

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <RadioButton Content="MP3" IsChecked="{Binding IsMp3}" />
            <RadioButton Content="MP4" IsChecked="{Binding IsMp4}" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Text="{Binding OutputPath}" Width="350" IsReadOnly="True"/>
            <Button Content="Browse" Width="100" Margin="10,0,0,0" Command="{Binding BrowseCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Download" Command="{Binding DownloadCommand}" Width="100"/>
            <Button Content="Stop" Command="{Binding StopCommand}" Width="100" Margin="10,0,0,0"/>
        </StackPanel>

        <ProgressBar Height="20" Margin="0,10,0,0" Maximum="100" Value="{Binding Progress}"/>

        <TextBlock Text="{Binding Status}" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding FileName}" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding FileSize}" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding Format}" Margin="0,5,0,0"/>

        <!-- Signature -->
        <TextBlock Text="by Murat Khabriev"
                   HorizontalAlignment="Left"
                   Margin="0,15,0,0"
                   Opacity="0.6"
                   FontSize="12"/>
    </StackPanel>
</Window>